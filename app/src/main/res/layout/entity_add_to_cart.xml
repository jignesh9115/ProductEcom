<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background_addtocart">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_img_AC"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/product_001"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name_AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ProductName:"
                android:textColor="#000"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tv_product_price_AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price :"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_plus_AC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/plus"/>

                <EditText
                    android:id="@+id/edt_item_AC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    android:maxLines="1"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/iv_minus_AC"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/minus"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
