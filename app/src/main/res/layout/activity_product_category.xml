<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCategory">

    <Button
        android:id="@+id/btn_cathandles"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@color/colorPrimary"
        android:text="Handle"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_catmagnet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Magnet"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_cathandles"/>

    <Button
        android:id="@+id/btn_catstopper"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="stopper"
        android:textSize="20dp"
        android:textColor="#fff"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_catmagnet"/>

</RelativeLayout>